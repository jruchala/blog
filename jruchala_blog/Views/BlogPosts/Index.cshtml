@model IEnumerable<jruchala_blog.Models.BlogPost>

@{
    ViewBag.Title = "Index";
}



<p>
    @{if (User.IsInRole("Admin"))
        {
            <a class="btn btn-primary" href="@Url.Action("Create","BlogPosts")" role="button">Create New</a>
        }
    }
    

</p>

<div class="container">
    @foreach (var item in Model.Reverse())
    {
        <div class="row">
            <div class="col-md-10">
                <h2>@Html.ActionLink(item.Title, "Details", new { id = item.Id })</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-10">
                <h4><em>@Html.DisplayFor(modelItem => item.Created)</em></h4>
            </div>
        </div>
        <div class="row">
            <div class="col-md-10">
                @Html.Raw(item.Body)
            </div>
        </div>
    }
</div>

    <!-- Pager -->
<ul class="pager">
    <li class="next">
        <a href="#">Older Posts &rarr;</a>
    </li>
</ul>
