@model jruchala_blog.Models.BlogPost

@{
    ViewBag.Title = "Delete";
}


<div class="container">
    <div class="row">
        <div class="col-md-10">
            <h3>Are you sure you want to delete this?</h3>
            <h4>Confirm below</h4>
        </div>
    </div>
    <div class="row">

        <hr />

        <dl class="dl-horizontal">
            <dd>
                <h2>@Html.DisplayFor(model => model.Title)</h2>
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Created)
            </dt>

            <dd>
                <em>@Html.DisplayFor(model => model.Created)</em>
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Updated)
            </dt>

            <dd>
                <em>@Html.DisplayFor(model => model.Updated)</em>
            </dd>

            <dd>
                @Html.Raw(Model.Body)
            </dd>

            <dd>
                @Html.DisplayFor(model => model.MediaUrl)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-danger" /> 
                <a href="@Url.Action("Index", "BlogPosts")" role="button" class="btn btn-link">Back to List</a>
            </div>
        }
    </div>
</div>